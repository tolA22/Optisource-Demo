@page
@using Microsoft.AspNetCore.Http
@model RazorCustomer.Pages.IndexModel
@{
    ViewData["Title"] = "Home page";
}

    <div class="container">
        <div class="row">
            
            <div class="col-md-offset-3 col-md-6">
                <div class="row">
                    <div class="col-12">
                        <div class="pt-5 text-center text-primary">
                            <h2 id="htext" class="pt-3">Hello!</h2>
                            <h5 class="makeGray">Sign in to your account</h5>
                        </div>
                    </div>
                    <div class="col-12">
                        <form method="post">
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                            <div class="form-group">
                                <label asp-for="User.Email" class="control-label"></label>
                                <input asp-for="User.Email" type="text" name="email" class="form-control rounded-pill"  />
                                <span asp-validation-for="User.Email" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="User.Password" class="control-label"></label>
                                <input asp-for="User.Password" type="password" name="password" class="form-control rounded-pill" />
                                <span asp-validation-for="User.Password" class="text-danger"></span>
                            </div>
                            <div style="padding-bottom:1rem;">
                                <span asp-validation-for="User.Password" class="text-danger" >@Model.msg</span>
                            </div>
                            <div class="row">
                                <div class="col-md-offset-3 col-md-6 text-center">
                                    <input type="submit" name="submit" class="pt-2 btn btn-primary text-center" />
                                    <h6 id="wbtext" class="makeGray p-4">Don't have an account? <a class="text-primary" asp-page="/Users/Create">Create</a></h6>
                                </div>
                            </div>
                            

                            @*glyphicons today*@
                        </form>

                    </div>
                    
                </div>
                
            </div>
        </div>
    </div>
